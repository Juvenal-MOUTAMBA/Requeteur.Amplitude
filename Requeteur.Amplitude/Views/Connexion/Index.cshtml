
@{
    ViewData["Title"] = "Connexion Agence";
    // Layout = null;
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="card shadow p-4" style="min-width:350px; max-width:400px;">
<h2>Choisissez une agence</h2>

<form method="post" asp-action="Connecter">
    <select name="agenceId" class="form-control mb-3">
        <option value="0">-- Sélectionnez --</option>
        @foreach (var agence in Model)
        {
            <option value="@agence.AGE">@agence.LIB</option>
        }
    </select>

    <div class="row">
        <div class="col text-start">
                    <form method="post" style="display:inline; asp-controller="Connexion" asp-action="Index">
            <button type="submit" class="btn btn-primary">Se connecter</button>
            </form>
        </div>
        <div class="col text-end">
                    <form method="post" style="display:inline; asp-controller="Connexion" asp-action="Quitter">
                <button type="submit" class="btn btn-danger">Déconnecter</button>
            </form>
        </div>
    </div>
</form>

</div>
</div>