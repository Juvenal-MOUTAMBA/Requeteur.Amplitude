
@{
    ViewData["Title"] = "Connexion Agence";
    // Layout = null;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Connexion à une agence</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Connexion">
                        <div class="mb-3">
                            <label for="agence" class="form-label">Sélectionnez une agence</label>
                            <select class="form-select" name="AGE" required>
                                @foreach (var agence in Model)
                                {
                                    <option value="@agence.AGE">@agence.LIB</option>
                                }
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Se connecter</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>