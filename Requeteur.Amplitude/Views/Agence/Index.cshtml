@model List<Agence>
@{
    ViewData["Title"] = "Agence";
}
<h1></h1>
<h1></h1>
<h1 class="h3 mb-0">Liste des agences</h1>
<div class="table-responsive" style="max-height: 700px; overflow-y: auto;">
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th style="min-width: 120px;">CodeAgence</th>
                <th style="min-width: 120px;">Libellé</th>
                <th style="min-width: 130px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var clt in Model)
            {
                <tr>
                    <td>@clt.AGE</td>
                    <td>@clt.LIB</td>
                    <td>
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@clt.AGE"><i class="bi bi-eye"></i></a>
                        <a class="btn btn-sm btn-warning" asp-action="" asp-route-id="@clt.AGE"><i class="bi bi-pencil"></i></a>
                        @* <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@clt.IdClient"><i class="bi bi-trash"></i></a> *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="mt-4">
    <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">
        <i class="bi bi-arrow-left"></i> Retour
    </a>
</div>

